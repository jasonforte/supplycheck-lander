          <div class="card">
            <h3>Weekend Briefing</h3>
            <p>A concise weekly roundup to keep your team aligned.</p>
          </div>
        </div>
      </section>

      <!-- CTA -->
      <section class="cta" aria-labelledby="cta-title">
        <div>
          <h3 id="cta-title">Join 1,000+ readers accelerating automation</h3>
          <p>Subscribe now and get the free 10â€‘page Automation Report instantly.</p>
        </div>
        <div class="signup">
          <input class="input" type="email" placeholder="you@company.com" aria-label="Email" />
          <button class="button" type="button">Sign Up</button>
        </div>
      </section>
    </main>
