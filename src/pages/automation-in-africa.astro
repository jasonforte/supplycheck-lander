---
// Newsletter Landing Page (design-only, no functionality)
const pageTitle = "Automation in Africa â€” Weekly Newsletter";
const pageDescription = "Sign up to receive weekly insights on automation across African markets. Join today and get a free 10â€‘page automation report.";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
    <style>
      :root {
        --bg: #ffffff;
        --panel: #f5f7fb;
        --muted: #5b667a;
        --text: #0b1020;
        --accent: #2563eb;
        --accent-strong: #1d4ed8;
        --ring: #2563eb26;
      }
      * { box-sizing: border-box; }
      html, body { margin: 0; padding: 0; }
      body {
        font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, "Helvetica Neue", Arial, "Noto Sans", "Apple Color Emoji", "Segoe UI Emoji";
        background: radial-gradient(1200px 800px at 20% -10%, #eaf1ff 0%, #ffffff 70%), var(--bg);
        color: var(--text);
      }
      .container { max-width: 1120px; margin: 0 auto; padding: 24px; }

      /* Hero */
      .hero {
        padding: 72px 0 48px;
        display: grid;
        grid-template-columns: 1.1fr 0.9fr;
        gap: 40px;
        align-items: center;
      }
      .eyebrow { color: var(--accent); font-weight: 600; letter-spacing: 0.08em; text-transform: uppercase; font-size: 12px; }
      .title { font-size: 44px; line-height: 1.1; margin: 12px 0 16px; font-weight: 800; }
      .subtitle { color: var(--muted); font-size: 18px; line-height: 1.6; margin: 0 0 28px; }
      .lead-card {
        background: linear-gradient(180deg, #ffffff, #f7faff);
        border: 1px solid #e2e8f0;
        border-radius: 14px;
        padding: 18px;
        display: flex;
        gap: 12px;
        align-items: center;
        box-shadow: 0 0 0 6px var(--ring);
      }
      .lead-badge { background: #eaf1ff; color: var(--accent); font-weight: 600; padding: 8px 10px; border-radius: 10px; font-size: 12px; }
      .lead-text { margin: 0; font-size: 14px; color: var(--text); }

      .signup {
        display: flex;
        gap: 10px;
        margin-top: 18px;
      }
      .input {
        flex: 1;
        background: #ffffff;
        border: 1px solid #cbd5e1;
        color: var(--text);
        padding: 14px 14px;
        border-radius: 10px;
        outline: none;
      }
      .button {
        background: var(--accent-strong);
        color: #ffffff;
        font-weight: 700;
        border: none;
        border-radius: 10px;
        padding: 14px 18px;
        cursor: pointer;
      }
      .button:hover { background: var(--accent); }
      .hero-graphic {
        background: radial-gradient(400px 220px at 80% 20%, #e3edff 0%, #eef4ff 45%, #f7faff 80%);
        border: 1px solid #dbe4fd;
        border-radius: 16px;
        height: 360px;
        display: grid;
        place-items: center;
        position: relative;
        overflow: hidden;
      }
      .blob {
        position: absolute;
        width: 420px; height: 420px; border-radius: 50%;
        background: radial-gradient(circle at 30% 30%, #2563eb22, transparent 60%);
        filter: blur(10px);
        animation: float 10s ease-in-out infinite;
      }
      @keyframes float { 0%, 100% { transform: translateY(-6px);} 50% { transform: translateY(6px);} }
      .report {
        background: #ffffffcc;
        border: 1px solid #cfe0ff;
        border-radius: 14px;
        padding: 16px 18px;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        backdrop-filter: blur(8px);
      }
      .report strong { color: var(--text); }

      /* Features */
      .section { padding: 36px 0 12px; }
      .section h2 { font-size: 28px; margin: 0 0 8px; }
      .section p.desc { margin: 0 0 24px; color: var(--muted); }
      .grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 18px;
      }
      .card {
        background: linear-gradient(180deg, #ffffff, #f9fbff);
        border: 1px solid #e5e7eb;
        border-radius: 12px;
        padding: 16px;
      }
      .card h3 { margin: 0 0 6px; font-size: 18px; }
      .card p { margin: 0; color: var(--muted); }

      /* CTA */
      .cta {
        margin: 32px 0 64px;
        background: linear-gradient(90deg, #e9f0ff, #eef4ff);
        border: 1px solid #cfe0ff;
        border-radius: 14px;
        padding: 22px;
        display: grid;
        grid-template-columns: 1.2fr 0.8fr;
        gap: 16px;
        align-items: center;
      }
      .cta h3 { margin: 0 0 6px; font-size: 22px; }
      .cta p { margin: 0; color: var(--muted); }

      /* Responsive */
      @media (max-width: 900px) {
        .hero { grid-template-columns: 1fr; }
        .cta { grid-template-columns: 1fr; }
        .grid { grid-template-columns: 1fr; }
      }

      /* Footer */
      .footer {
        background: #f7faff;
        border-top: 1px solid #e5e7eb;
        margin-top: 24px;
      }
      .footer-inner {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 18px;
        padding-bottom: 18px;
      }
      .brand { display: flex; align-items: center; gap: 12px; }
      .logo {
        width: 36px; height: 36px; border-radius: 8px;
        display: grid; place-items: center;
        background: #eaf1ff; color: var(--accent-strong);
        font-weight: 800;
      }
      .brand-name { margin: 0; font-size: 16px; }
      .brand-tag { margin: 2px 0 0; color: var(--muted); font-size: 12px; }
      .social { display: flex; gap: 12px; }
      .icon { color: #334155; display: inline-flex; align-items: center; justify-content: center; width: 36px; height: 36px; border-radius: 8px; background: #ffffff; border: 1px solid #e5e7eb; text-decoration: none; }
      .icon:hover { color: var(--accent-strong); border-color: #cfe0ff; background: #f5f9ff; }
    </style>
  </head>
  <body>
    <main class="container">
      <!-- Hero with Lead Magnet -->
